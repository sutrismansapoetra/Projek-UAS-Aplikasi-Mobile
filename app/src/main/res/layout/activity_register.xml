<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="64dp"
    android:paddingTop="16dp"
    android:background="@drawable/bgfiks">


    <ImageView
        android:id="@+id/buku"
        android:layout_width="294dp"
        android:layout_height="131dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/user"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_below="@id/buku"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#ffd5d6d6"
        android:textAlignment="center"
        android:hint=" Masukkan Username"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/nim"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_below="@id/user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#ffd5d6d6"
        android:hint=" Masukkan Nim"
        android:textAlignment="center"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_below="@id/nim"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#ffd5d6d6"
        android:textAlignment="center"
        android:hint=" Masukkan Email"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/jurusan"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#ffd5d6d6"
        android:textAlignment="center"
        android:hint=" Masukkan Jurusan"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_below="@id/jurusan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#ffd5d6d6"
        android:textAlignment="center"
        android:hint="Masukkan Password"
        android:textSize="20dp" />


    <Button
        android:id="@+id/regis"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#DCB74B"
        android:text="Submit" />
</RelativeLayout>